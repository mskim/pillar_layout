<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <div class="col-md-10">
        <h3 class="display-4 text-center" style="font-size: 35px;">로그인</h3>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label "이메일주소:" %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control form-control-sm' %>
        </div>
        <div class="form-group">
          <%= f.label "암호:" %>
          <%= f.password_field :password, class: 'form-control form-control-sm' %>
        </div>
        <div class="form-actions">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, t(".sign_in"), class: 'btn btn-secondary btn-block btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
