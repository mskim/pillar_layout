                    <% else %>
                      <td style="text-align:center; width:10%;" align="right"><%= f.submit '저장', class: 'btn btn-sm btn-primary' %></td>
                    <% end %>
                  </tr>
                </tbody>
              </table>
            <% end %>
          <% end %>
        </div>
        <br>
        <!-- 폼 외부에서 저장 버튼 가능하게... 현재 마지막 폼만 작동.. each do 가 아닌 1~24페이지를 다 만들어 놓으면 될까? -->
