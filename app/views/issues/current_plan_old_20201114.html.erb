                  <td style="text-align:center; width:10%;"><%= f.select :ad_type, @available_ads_for_pages[page_plan.page_number - 1 ], {include_blank: false} %></td>
                  <td style="text-align:center; width:20%;"><%= f.text_field :advertiser %>
