<%= simple_form_for(@reporter_group) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :section, label: "팀"%>
    <%= f.input :leader, label: "팀장" %>
    <%= f.input :page_range, label: "페이지 영역" %>
  </div>

  <div class="form-group mt-3">
    <%= f.submit "저장", class: "btn btn-primary btn-block" %>
  </div>
<% end %>