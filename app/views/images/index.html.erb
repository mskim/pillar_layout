<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Column</th>
      <th>Row</th>
      <th>Height adjustment</th>
      <th>Image path</th>
      <th>Caption title</th>
      <th>Caption</th>
      <th>Position</th>
      <th>Height type</th>
      <th>Article</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.column %></td>
        <td><%= image.row %></td>
        <td><%= image.extra_height_in_lines %></td>
        <td><%= image.image_path %></td>
        <td><%= image.caption_title %></td>
        <td><%= image.caption %></td>
        <td><%= image.position %></td>
        <td><%= image.working_article %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

