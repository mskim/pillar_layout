<%= simple_form_for(@ad_box) do |f| %>
<%= f.error_notification %>

<div class="form-group">
  <%= f.input :column, label: "단:", input_html: { class: "form-control" } %>
</div>
<div class="form-group">
  <%= f.input :row, label: "열", input_html: { class: "form-control" } %>
</div>
<div class="form-group">
  <%= f.input :ad_type, label: "종류", input_html: { class: "form-control" } %>
</div>
<div class="form-group">
  <%= f.input :advertiser, label: "광고주", input_html: { class: "form-control" } %>
</div>
<div class="form-group">
  <%= f.input :storage_ad_image, label: "광고 이미지", input_html: { class: "form-control" } %>
</div>
<div class="form-actions">
<p></p>
<%= f.button :submit, "저장하기", accesskey: "s", class: "btn btn-primary btn-lg btn-block", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %></div>
<% end %>


