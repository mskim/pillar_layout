<%= simple_form_for(@page_layout) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :page_type, label: "페이지 타입" %>
    <%= f.input :ad_type, label: "광고 타입" %>
    <%= f.input :column, label: "단의 수" %>
    <%= f.input :row, label: "행의 수" %>
    <%= f.input :layout, label: "레이아웃", as: :text, input_html: { rows: 10 } %>
    <%= f.input :like %>
  </div>

  <div class="form-group mt-3">
    <%= f.submit "저장", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
