<%= simple_form_for(@page_layout) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :doc_width %>
    <%= f.input :doc_height %>
    <%= f.input :ad_type %>
    <%= f.input :page_type %>
    <%= f.input :column %>
    <%= f.input :row %>
    <%= f.input :pillar_count %>
    <%= f.input :grid_width %>
    <%= f.input :grid_height %>
    <%= f.input :gutter %>
    <%= f.input :margin %>
    <%= f.input :layout, { multiple: true}%>
    <%= f.input :layout_with_pillar_path %>
    <%= f.input :like %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
