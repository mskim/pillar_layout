
<%= simple_form_for(@body_line) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :order %>
    <%= f.input :x %>
    <%= f.input :y %>
    <%= f.input :width %>
    <%= f.input :height %>
    <%= f.input :coulumn %>
    <%= f.input :line_number %>
    <%= f.input :tokens %>
    <%= f.input :overflow %>
    <%= f.association :working_aticle %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
