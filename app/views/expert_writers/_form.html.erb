<%= simple_form_for(@expert_writer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :work %>
    <%= f.input :position %>
    <%= f.input :email %>
    <%= f.input :category_code %>
    <%= f.input :expert_image %>
    <%= f.input :expert_jpg_image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
