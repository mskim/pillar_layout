<%= simple_form_for(@layout_node) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :direction %>
    <%= f.input :grid_x %>
    <%= f.input :grid_y %>
    <%= f.input :column %>
    <%= f.input :row %>
    <%= f.input :profile %>
    <%= f.input :node_kind %>
    <%= f.input :tag %>
    <%= f.input :selected %>
    <%= f.input :actions %>
    <%= f.input :layout %>
    <%= f.input :layout_with_pillar_path %>
    <%= f.input :box_count %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
