<h1>Article Plans</h1>

<table>
  <thead>
    <tr>
      <th>Page plan</th>
      <th>Reporter</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_plans.each do |article_plan| %>
      <tr>
        <td><%= article_plan.page_plan %></td>
        <td><%= article_plan.reporter %></td>
        <td><%= article_plan.order %></td>
        <td><%= link_to 'Show', article_plan %></td>
        <td><%= link_to 'Edit', edit_article_plan_path(article_plan) %></td>
        <td><%= link_to 'Destroy', article_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

