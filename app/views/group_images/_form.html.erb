<%= simple_form_for(@group_image) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title, label: "제목" %>
    <%= f.input :caption, label: "설명" %>
    <%= f.input :source, label: "출처" %>
    <%= f.input :direction, label: "주축방향 설정", collection: ["가로", "세로"], wrapper: :vertical_collection_inline, as: :radio_buttons %>
    <%= f.input :position, label: "위치설정" %>
    <%= f.association :working_article, as: :hidden, input_html: { value: f.object.working_article_id} %>
  </div>
  <div class="form-group mt-3">
    <%= f.button :submit, action_name == "new" ? "등록" : "업데이트", class: "btn btn-info btn-block btn-lg" %>
  </div>
<% end %>
