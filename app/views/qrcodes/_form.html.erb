
<%= simple_form_for(@qrcode) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :x %>
    <%= f.input :y %>
    <%= f.input :width %>
    <%= f.input :height %>
    <%= f.input :qr_text %>
    <%= f.input :qrcode_file %>
    <%= f.input :qrcode_type %>
    <%= f.association :web_page %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
