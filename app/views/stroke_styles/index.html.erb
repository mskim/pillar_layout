<h3 align="center">박스별 테두리 정보 정의</h3>

<table class="table table-striped">

  <thead>
    <tr>
      <th>박스영문이름</th>
      <th>한글이름</th>
      <th>테두리정보</th>
      <!-- <th>매체</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stroke_styles.each do |stroke_style| %>
      <tr>
        <td><%= stroke_style.klass %></td>
        <td><%= stroke_style.name %></td>
        <td><%= stroke_style.stroke %></td>
        <!-- <td><%= stroke_style.publication %></td> -->
        <td><%= button_to "보기", stroke_style, method: :get, class: "btn btn-sm btn-success" %></td>
        <td><%= link_to '수정', edit_stroke_style_path(stroke_style), method: :get, class: "btn btn-sm btn-warning" %></td>
        <td><%= button_to "삭제", stroke_style, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div align="center">
  <%= link_to "스타일 적용", save_current_stroke_style_path(first_style), method: :get, class: "btn-group btn btn-sm btn-success" , align: "center"%>

  <!-- <%= link_to "결과물 보기", style_view_text_styles_path, method: :get, class: "btn-group btn btn-sm btn-success" , align: "center"%> -->
  <%= link_to "       ", "#", method: :get, class: "btn-group btn btn-md" , align: "center"%>
  <%= link_to "새 테두리 항목 생성", new_stroke_style_path, method: :get, class: "btn-group btn btn-sm btn-info" , align: "center"%>

  <%= link_to "다운로드 CSV", stroke_styles_path(format: "csv"), method: :get, class: "btn-group btn btn-sm btn-warning" , align: "center"%>
</div>
