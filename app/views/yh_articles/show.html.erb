<div class="container">
  <h3 class="text-center">연합 국내취재 기사</h3>
  <div class="" id="yh_article_search">
    <%= render 'search_form' %>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div class="row" style="width: 100%;">
    <div class="col-md-7">
      <div id="yh_article_result_for_show">
        <%= render 'yh_article_result_for_show' %>
      </div>
      <div id="yh_article_paginate">
        <%= paginate @yh_articles, remote: true, theme: 'twitter-bootstrap-4', pagination_class: "justify-content-center" %>
      </div>
    </div>
    <div class="col-md-5" id="article_preview">
      <%= render "article_preview" %>
    </div>
  </div>
</div>
