<table class="table table-sm table-bordered">
  <thead class="text-center">
    <tr>
      <th scope="col">제목</th>
      <th scope="col">분류</th>
      <th scope="col">발행시간</th>
    </tr>
  </thead>
  <tbody>
    <% @yh_articles.each do |article| %>
      <tr>
        <td>
          <%= link_to article.title, article, remote: true %>
        </td>
        <td class="text-center">
          <%= eval(article.category)[:name] %>
        </td>
        <td class="text-center">
          <%= article.created_at.strftime("%m-%d %H:%M") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
