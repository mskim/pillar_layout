<div class="card text-center">
  <div class="card-header text-light bg-dark">
    <span class="float-left">
      <h4>
        기사 미리보기
      </h4>
    </span>
    <span class="float-right">
      <%= link_to 'X', yh_articles_path, class: "btn btn-sm btn-danger" %>
    </span>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @yh_article.title %></h5>
    <p class="card-text">
      <%= simple_format(@yh_article.body) %>
    </p>
  </div>
  <div class="card-footer text-muted">
    <%= @yh_article.created_at.strftime("%y-%m-%d %H:%M") %>
  </div>
</div>
