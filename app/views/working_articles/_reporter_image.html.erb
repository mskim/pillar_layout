<div class="row row-cols-1 row-cols-md-4">
  <% reporter_images.each do |picture| %>
    <% if picture.used_in_layout == true %>
    <% else %>
      <div class="col mb-2">
        <div class="card h-100">
          <img src="<%= picture.preview_path %>" class="repoter_img_thumb card-img-top w-100" style="height: 160px;">
          <div class="card-body text-center">
            <h6 class="card-title"><%= truncate(picture.title, length: 10) %></h6>
            <%= link_to '사진 선택', select_reporter_image_working_article_path(@working_article, reporter_image: picture), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>