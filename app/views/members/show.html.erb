<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow" style="margin-bottom: 7rem;">
        <%= image_tag @member.image, class: "card-img-top", alt: @member.caption_title %>
        <div class="card-body">
          <h5 class="card-title"><%= @member.caption_title %></h5>
          <p class="card-text">
            <%= @member.caption_description %>
          </p>
          <p class="card-text text-secondary text-right">
            출처: <%= @member.source %> / 사진 순서: <%= @member.order %>
          </p>
          <p class="card-text"><small class="text-muted"><%= @member.created_at %></small></p>
        </div>
      </div>
    </div>
  </div>
</div>
<nav class="navbar navbar-light bg-light fixed-bottom">
  <div class="btn-group" role="group" aria-label="기능">
    <%= link_to "편집", edit_member_path(@member), class: "btn btn-warning" %>
    <%= link_to "삭제", member_path(@member), method: :delete, data: { confirm: "이 게시물을 삭제하시겠습니까?" }, class: "btn btn-danger" %>
  </div>
</nav>
