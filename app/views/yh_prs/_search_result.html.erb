<div class="card-deck">
  <% @yh_prs.each do |yh_pr| %>
    <div class="col-md-3">
      <div class="card mb-3 text-center">
        <%= link_to (image_tag yh_pr.full_size_path, class: "card-img-top", style: "width: 100%;"), yh_pr_path(yh_pr), remote: true %>
        <div class="card-body">
          <h6 class="card-title text-center mb-0"><%= yh_pr.title %></h6>
        </div>
        <div class="card-footer">
          <small class="text-muted"><%= yh_pr.created_at.strftime("%y-%m-%d %H:%M") %></small>
        </div>
      </div>
    </div>
  <% end %>
</div>
