<div class="container mb-3">
  <h3 class="text-center">PR보도자료</h3>
  <div id="yh_prs_search_form">
    <%= render 'search_form' %>
  </div>
</div>
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="card-deck">
      <% @yh_prs.each do |yh_pr| %>
        <div class="col-md-2">
          <div class="card mb-3 text-center">
            <%= link_to (image_tag yh_pr.full_size_path, class: "card-img-top", style: "width: 100%;"), yh_pr_path(yh_pr) %>
            <div class="card-body">
              <h6 class="card-title text-center mb-0"><%= yh_pr.title %></h6>
            </div>
            <div class="card-footer">
              <small class="text-muted"><%= yh_pr.created_at.strftime("%y-%m-%d %H:%M") %></small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @yh_prs, theme: 'twitter-bootstrap-4', pagination_class: "justify-content-center" %>
  </div>
</div>
