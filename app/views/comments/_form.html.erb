<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :text %>
    <%= f.input :image %>
    <%= f.input :x_value %>
    <%= f.input :y_value %>
    <%= f.input :width %>
    <%= f.input :height %>
    <%= f.association :proof %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
