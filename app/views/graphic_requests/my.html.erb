<div align="center">
<h3>나의 그래픽 의뢰</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>날짜</th>
      <th>디자이너</th>
      <th>요청사항</th>
      <th>진행상황</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @graphic_requests.each do |graphic_request| %>
      <tr>
        <td><%= graphic_request.date %></td>
        <td><%= graphic_request.designer %></td>
        <td><%= graphic_request.request %></td>
        <td><%= graphic_request.status %></td>
        <td><%= button_to '수정', graphic_request , class: "btn btn-sm btn-warning", method: :get%></td>
        <td><%= button_to '삭제', graphic_request, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "새로운 그래픽 의뢰", new_graphic_request_path, method: :get, class: "btn btn-default btn-sm" %>

</div>


