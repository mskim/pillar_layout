<div class="container">
  <h3 class="text-center">연합 그래픽</h3>
  <%= render 'search_form' %>
</div>
<div class="row">
  <div class="col-md-12">
    <br>
    <div class="card-columns">
      <% @yh_graphics.each do |yh_graphic| %>
        <div class="card text-center">
          <%= link_to (image_tag yh_graphic.thumb_path, class: "img-crop", style: "width: 100%;"), yh_graphic_path(yh_graphic) %>
          <div class="card-footer">
            <h6 class="card-title text-center mb-0"><%= yh_graphic.title %></h6>
            <small class="text-muted"><%= yh_graphic.created_at.strftime("%y-%m-%d %H:%M") %></small>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @yh_graphics, theme: 'twitter-bootstrap-4', pagination_class: "justify-content-center" %>
  </div>
</div>
