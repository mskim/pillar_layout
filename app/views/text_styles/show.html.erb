<div class="row justify-content-center">
  <div class="col-md-5">
    <h3>단락스타일 수정</h3>
    <%= render 'form', text_style: @text_style %>
  </div>
  <div class="col-md-5">
    <h3>단락스타일 보기</h3>
    <img src="<%= @text_style.pdf_image_path %>" class="w-100">
  </div>
</div>
<div class="row justify-content-center">
  <%= button_to "다운로드 PDF", download_pdf_text_style_path(@text_style), method: :get, class: "btn btn-sm btn-danger" %>
</div>