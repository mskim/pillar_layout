<div class="w-100 p-3">
  <div class="row">
    <div class="col-md-2">
      <div class="border shadow">
        <div style="width: 100%;">
          <%= raw @page.to_svg_with_jpg %>
        </div>
      </div>
    </div>
    <div class="col-md-10">
      <% @page.pillars.sort_by{|p| p.order}.each do |pillar| %>
        <div class="row">
          <div class="col-md-2">
            <div class="border shadow" style="width: 100%;">
              <%= raw pillar.to_svg_with_jpg %>
            </div>
          </div>
          <div class="col-md-10">
            <div class="row">
              <% pillar.choices.each do |choice| %>
                <div class="card mb-3" style="width: 10rem;">
                  <%= raw choice.to_svg %>
                  <%= link_to '레이아웃 바꾸기', change_layout_pillar_path(pillar, new_choice: choice), method: :patch, class: "btn btn-danger text-center" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <hr class="mb-5">
      <% end %>
    </div>
  </div>
</div>