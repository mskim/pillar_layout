<%= form_for(@page, remote: true) do |f| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>
      <ul>
        <% page.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.check_box :color_page %>
    <%= f.button "컬러면 저장", class: "btn btn-md btn-primary", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
  </div>
<% end %>
<% if @page.draw_divider == true %>
  <%= link_to "세로선 제거", set_divider_not_to_draw_page_path, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."}, class: "btn btn-md btn-danger" %>
<% else %>
  <%= link_to "세로선 생성", set_divider_to_draw_page_path, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."}, class: "btn btn-md btn-success" %>
<% end %>