<div align="center">

<h3>광고 화일 관리</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>광고주</th>
      <th>종류</th>
      <th>단</th>
      <th>열</th>
      <th>컬러</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ad_images.each do |ad_image| %>
      <tr>
        <td><%= ad_image.advertiser %></td>
        <td><%= ad_image.ad_type %></td>
        <td><%= ad_image.column %></td>
        <td><%= ad_image.row %></td>
        <td><%= ad_image.color %></td>

        <td><%= link_to 'Show', ad_image %></td>
        <td><%= link_to 'Edit', edit_ad_image_path(ad_image) %></td>
        <td><%= link_to 'Destroy', ad_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Placed Ad', new_ad_image_path %>
</div>
