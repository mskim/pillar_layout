<h3 align="center">광고</h3>

<table class="table table-striped table-bordered table-sm">
  <thead>
    <tr>
      <th>광고명 </th>
      <th>행 </th>
      <th>열 </th>
      <th>면의 가로 단수</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td style="text-align:center;"><%= ad.name %></td>
        <td style="text-align:center;"><%= ad.column %></td>
        <td style="text-align:center;"><%= ad.row %></td>
        <td style="text-align:center;"><%= ad.page_columns %></td>
        <td><%= button_to "보기", ad, method: :get, class: "btn btn-sm btn-success" %></td>
        <td><%= button_to "수정", edit_ad_path(ad), method: :get, class: "btn btn-sm btn-warning" %></td>
        <td><%= button_to "삭제", ad, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class='text-center'>
  <%= link_to "새항목 생성", new_ad_path, method: :get, class: "btn btn-sm btn-info" %>
  <%= link_to "다운로드 CSV", ads_path(format: "csv"), method: :get, class: "btn btn-sm btn-warning" %>
</div>
