<%= simple_form_for(@member_image) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= image_tag f.object.image_attach, class: "mw-100" %>
  <div class="form-inputs">
    <%= f.label "첨부파일"%>
    <div class="custom-file">
      <%= f.input :image_attach, as: :file, label: "이미지 첨부파일", label_html: { class: "custom-file-label" }, wrapper: false, input_html: { class: "custom-file-input" } %>
    </div>
    <%= f.input :title, label: "제목:", placeholder: "제목을 입력해주세요" %>
    <%= f.input :caption, label: "설명:", placeholder: "설명을 입력해주세요" %>
    <%= f.input :source, label: "출처:", placeholder: "출처를 입력해주세요" %>
    <%= f.input :order, label: "사진순서:", min: 1 %>
    <%= f.association :group_image, as: :hidden, input_html: { value: f.object.group_image_id} %>
  </div>
  <div class="form-group mt-3">
    <%= f.button :submit, action_name == "new" ? "등록" : "업데이트", class: "btn btn-info btn-block btn-lg"%>
  </div>
<% end %>
