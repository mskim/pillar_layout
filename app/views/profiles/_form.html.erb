<%= simple_form_for(profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: "분류", :collection => ["기고", "정치시평"], include_blank: false %>
    <%= f.input :name, label: "이름" %>
    <%= f.input :work, label: "소속" %>
    <%= f.input :position, label: "직책" %>
    <div class="field">
      <%= f.input :profile_image, as: :file, label: "EPS 선택",  input_html: { class: "form-control" } %>
    </div>
    <div class="field">
      <%= f.input :profile_jpg_image, label: "JPG 선택", input_html: { class: "form-control" } %>
    </div>
    <%= f.association :publication , :as => :hidden, input_html: { value: 1 }%>
  </div>

  <div class="form-group mt-3">
    <%= f.button :submit, value: "저장", class: "btn btn-primary btn-sm" %>
    <% if profile.persisted? %>
      <%= link_to '삭제', @profiles, method: :delete, data: { confirm: '정말 삭제하겠습니까?' }, class: "btn btn-danger btn-sm" %>
    <% end %>
  </div>
<% end %>
