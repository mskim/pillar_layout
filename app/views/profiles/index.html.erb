<h3>기고 저자</h3>
<%= search_form_for @q do |f| %>
<%= f.label '이름에 포함된 글자로' %>
<%= f.search_field :name_cont %>
<%= f.submit "검색", class: "btn btn-sm btn-normal"%>
<% end %>
<p></p>
<div class="container-fluid">
  <div class="row">
    <% @profiles.each do |writer| %>
      <div class="col-md-2">
        <% if browser.safari? %>
          <div class="card" style="width: 18rem;">
            <%= link_to profile_path(writer) do %>
              <img src="<%= writer.pdf_image_path %>" width="100%" class="mb-0">
            <% end %>
            <div class="card-body">
              <%= link_to profile_path(writer) do %>
                <h5 class="card-title"><%= writer.name %></h5>
              <% end %>
              <p class="card-text"><%= link_to '삭제', writer, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            </div>
          </div>
        <% else %>
          <div class="card" style="width: 18rem;">
            <%= link_to profile_path(writer) do %>
              <img src="<%= writer.jpg_image_path %>" width="100%" class="mb-0">
            <% end %>
            <div class="card-body">
              <%= link_to profile_path(writer) do %>
                <h5 class="card-title"><%= writer.name %></h5>
              <% end %>
              <p class="card-text"><%= link_to '삭제', writer, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            </div>
          </div>
        <% end %>
      </div>
      <!-- true -->
    <% end %>
  </div>
</div>

<!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
<nav class="navbar navbar-default navbar-fixed-bottom">
<div class="btn-group" role="group" aria-label="기능">
  <%= link_to "새로운 저자등록", new_profile_path, method: :get, class: "btn btn-default btn-sm" %>
  <%= link_to '다운로드 CSV', profiles_path(format: "csv"), method: :get, class: "btn btn-default btn-sm" %>
</div>
</nav>

