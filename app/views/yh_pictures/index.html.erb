<div class="container mb-3">
  <h3 class="text-center mb-3">연합 국내취재 사진</h3>
  <div id="yh_picture_search_form">
    <%= render 'search_form' %>
  </div>
</div>
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="card-deck">
      <% @yh_pictures.each do |yh_picture| %>
        <div class="col-md-2">
          <div class="card mb-3 text-center">
            <%= link_to (image_tag yh_picture.thumb_path, class: "card-img-top"), yh_picture_path(yh_picture) %>
            <div class="card-body">
              <h6 class="card-title text-center mb-0"><%= yh_picture.title %></h6>
            </div>
            <div class="card-footer">
              <small class="text-muted"><%= yh_picture.created_at.strftime("%y-%m-%d %H:%M") %></small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <%= paginate @yh_pictures, theme: 'twitter-bootstrap-4', pagination_class: "justify-content-center" %>
</div>
