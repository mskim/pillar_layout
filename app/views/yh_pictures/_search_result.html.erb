<div class="card-deck">
  <% @yh_pictures.each do |yh_picture| %>
    <div class="col-md-3">
      <div class="card mb-3 text-center">
        <%= link_to (image_tag yh_picture.thumb_path, class: "card-img-top", style: "width: 100%;"), yh_picture_path(yh_picture), remote: true %>
        <div class="card-footer">
          <h6 class="card-title text-center mb-0"><%= yh_picture.title %></h6>
          <small class="text-muted"><%= yh_picture.created_at.strftime("%y-%m-%d %H:%M") %></small>
        </div>
      </div>
    </div>
  <% end %>
</div>
