<h1>Ad Box Templates</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Column</th>
      <th>Row</th>
      <th>Ad type</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ad_box_templates.each do |ad_box_template| %>
      <tr>
        <td><%= ad_box_template.column %></td>
        <td><%= ad_box_template.row %></td>
        <td><%= ad_box_template.ad_type %></td>
        <td><%= ad_box_template.section %></td>
        <td><%= link_to 'Show', ad_box_template %></td>
        <td><%= link_to 'Edit', edit_ad_box_template_path(ad_box_template) %></td>
        <td><%= link_to 'Destroy', ad_box_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

