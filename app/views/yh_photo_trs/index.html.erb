<div class="container mb-3">
  <h3 class="text-center mb-3">번역 외신 사진</h3>
  <%= render 'search_form' %>
</div>
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="card-deck">
      <% @yh_photo_trs.each do |yh_photo_tr| %>
        <div class="col-md-2">
          <div class="card mb-3 text-center">
            <%= link_to (image_tag yh_photo_tr.thumb_path, class: "img-crop", style: "width: 100%;"), yh_photo_tr_path(yh_photo_tr) %>
            <div class="card-footer">
              <h6 class="card-title text-center mb-0"><%= yh_photo_tr.title %></h6>
              <small class="text-muted"><%= yh_photo_tr.created_at.strftime("%y-%m-%d %H:%M") %></small>
              <p class="font-weight-bold mb-0"><%= yh_photo_tr.source %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @yh_photo_trs, theme: 'twitter-bootstrap-4', pagination_class: "justify-content-center" %>
  </div>
</div>
